{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "fresh": "https://deno.land/x/fresh@2.0.0-beta.8/mod.ts",
    "preact": "https://esm.sh/preact@10.19.6",
    "preact/": "https://esm.sh/preact@10.19.6/",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts"
  },
  "tasks": {
    "dev": "deno run -A --watch edge-functions/api/main.ts",
    "dev:auth": "deno run -A --watch edge-functions/auth/main.ts",
    "dev:ai": "deno run -A --watch edge-functions/ai/main.ts",
    "dev:sync": "deno run -A --watch edge-functions/sync/main.ts",
    "dev:fibonrose": "deno run -A --watch edge-functions/fibonrose/main.ts",
    "dev:monitor": "deno run -A --watch edge-functions/monitor/main.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
